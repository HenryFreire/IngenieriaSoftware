public class ordenamiento implements Figura {

    public Array ordenar (Figuras[] formas, Strind tipoOrden){
       if(tipoOrden === "desc") {
            for(int i = formas.size() - 1; i > 0 i--){
                 dibujar(formas[i]);   
            }
       }else{
           for(int i =0; i < formas.size(); i++){
                 dibujar(formas[i]);   
            }
       }
        
    }

}