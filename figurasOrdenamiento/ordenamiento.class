public class ordenamiento  {
dibujar dibujarFiguras = new  dibujar;
    public Array ordenar (Figuras[] formas, String tipoOrden){
       if(tipoOrden === "desc") {
            for(int i = formas.size() - 1; i > 0 i--){
                 dibujar(formas[i]);   
            }
       }else{
           for(int i =0; i < formas.size(); i++){
                 dibujarFiguras.dibujar(formas[i]);   
            }
       }
        
    }

}
